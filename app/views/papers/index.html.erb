<%- model_class = Paper -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:paper_name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @papers.each do |paper| %>
      <tr>
        <td><%= link_to paper.id, paper_path(paper) %></td>
        <td><%= paper.name %></td>
        <td><%=l paper.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      paper_path(paper), :class => 'btn btn-default btn-xs' %>
          <% if current_user.admin %>            
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_paper_path(paper), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      paper_path(paper),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
          <%end%>   
          <% if !current_user.admin %>
            <% if @result.select{|a| a.user_id == current_user.id} == [] %>           
              <%= link_to 'Start Test',start_test_path(paper), :class => 'btn btn-default btn-xs' %>
            <%else%>
              <%= link_to 'Show Result',result_path(paper), :class => 'btn btn-primary btn-xs' %>
            <%end%>              
            
          <%end%>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_paper_path,
            :class => 'btn btn-primary' %>
