<center><h1><b>Result</b></h1></center>
<ul>
		<li><b>Paper:</b><%=@result.paper.name%><br></li>
		<li><b>Total Score:</b><%=@result.score%><br></li>
</ul>
<hr>
<%@result.paper.questions.each_with_index do |question,index| %>
	<%=index+1%>)<%=question.question%><br>
		<%ch=("a".ord-1).chr%>
		<%question.options.each do |option| %>
			<%if option.is_correct%>
				<div class="alert-success">
					&nbsp&nbsp&nbsp<%=ch=ch.next%>)<%=option.option%>
					</div>
				<%else%>	
				<div>
					&nbsp&nbsp&nbsp<%=ch=ch.next%>)<%=option.option%>
				</div>	
			<%end%>	
		  
		  <br>

		<%end%>
			<%ans=question.user_answer(@result.user_id)%>
			User Answer:
			<%if ans.options.blank? %>
				<div class="alert-info">
					Not-attempted
				</div>
			<%elsif ans.is_correct? %>
				<div class="alert-success">
			<%else%>
				<div class="alert-danger">
			<%end%>	
				<%ans.options.each do |option|%>
					<%=option.option%>
			<%end%>	
			</div>		
		<hr>

<%end%>		
<%=link_to "Back",:back,:class => 'btn btn-default'%>