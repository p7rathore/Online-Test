<div class="page-header">
  <h1 align="center"><%=t '.title', :default => "Forgot your password?" %></h1>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), :html => { :class => "form-horizontal user col-lg-offset-3",method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
    	<%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
   	<div class="col-lg-offset-2 col-lg-4">
    	<%= f.submit "Send me reset password instructions", :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>

<%= render "users/shared/links" %>
